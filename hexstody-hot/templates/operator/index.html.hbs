{{#*inline "page"}}

<h3>Withdrawal requests</h3>
<table>
    <thead>
        <tr>
            <th><b>Request ID</b></th>
            <th><b>User ID</b></th>
            <th><b>Address</b></th>
            <th><b>Created at</b></th>
            <th><b>Amount</b></th>
            <th><b>Status</b></th>
            <th><b>Actions</b></th>
        </tr>
    </thead>
    <tbody>
        {{#each withdrawal_requests}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.user}}</td>
                <td>{{this.address}}</td>
                <td>{{this.created_at}}</td>
                <td>{{this.amount}}</td>
                <td>{{this.confrimtaion_status}}</td>
                <td>
                    <div class="row">
                        <div class="col">
                            <button type="button" class="button primary icon">Confirm</button>
                        </div>
                        <div class="col">
                            <button type="button" class="button error icon">Reject</button>
                        </div>
                    </div>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{/inline}}
{{> base}}