<div class="card column is-half is-offset-one-quarter">
    <div class='card-content'>
        <div class="columns is-center">
            <div class="column">
                Available: <span id="{{name}}_balance">{{balance}}</span>
            </div>
            <div class="column has-text-right">
                Fee: <span id="{{name}}_fee">{{fee}}</span>
            </div>
        </div>
        <div class="columns is-center">
            <div class="column">
                Limit: <span id="{{name}}_limit">{{this.limit}}</span>
            </div>
            <div class="column has-text-right">
                Spent: <span id="{{name}}_spent">{{this.spent}}</span>
            </div>
        </div>
        <div class="columns is-center">
            <div class="column">
                Address:
            </div>
            <div class="column is-8">
                <input class="input is-fullwidth" id="{{name}}_address" type="text">
            </div>
        </div>
        <div class="columns is-center">
            <div class="column is-4">
                Amount:
            </div>
            <div class="column is-6">
                <input class="input" id="{{name}}_send_amount" type="text">
            </div>
            <div class="column">
                <button id="max_{{name}}" type="button" class="button is-fullwidth">
                    Max
                </button>
            </div>
        </div>
        <div class="columns is-center">
            <div class="column">
                <button id="send_{{name}}" type="button" class="button is-info is-fullwidth item-buttom-d">
                    Send
                </button>
            </div>
        </div>
        </div class="columns is-center">
            <label id="{{name}}_validation" hidden="hidden" class="text-error"></label>
        </div>
    </div>
</div>