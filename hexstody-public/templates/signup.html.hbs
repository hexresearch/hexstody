{{#*inline "css"}}
{{/inline}}

{{#*inline "scripts"}}
<script type="module" src="/scripts/page/common.js"></script>
<script type="module" src="/scripts/page/signup.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" defer></script>
<script src="/scripts/handlebars.min-v4.7.7.js" defer></script>
{{/inline}}

{{#*inline "page"}}
<style>
    body {
        background-color: #ECEFF4;
    }

    .login-title {
        width: 100%;
        height: 64px;

        font-family: 'Inter';
        font-style: normal;
        font-weight: 700;
        font-size: 60px;
        line-height: 64px;

        color: #282143;
    }

    .login-field-email {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 20px;

        align-items: center;

        color: #282143;
    }

    .form-group-label {
        top: -1px;
        left: 20px;
        background-color: white;
    }

    .login-field-pswd {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        font-size: 12px;
        line-height: 16px;

        align-items: center;
        letter-spacing: 0.1em;

        color: #282143;
    }

    .login-field-agree {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 20px;

        color: #282143;
    }

    .login-button-login {
        width: 100%;
        height: 56px;
        background-color: #409EFF !Important;
    }
</style>
<div class="full-height" style="background-color: #ECEFF4;">
    <div class="container" style="padding-top: 15%;">
        <div class="box"
            style="box-shadow: none !Important; width: 560px; padding: 85px; margin-left: auto; margin-right: auto;">

            <div class="field">
                <h1 class="login-title">Sign up</h1>
            </div>

            <div class="field login-field-email" style="margin-top: 25px;">
                <label for="" class="label form-group-label">Username</label>
                <div class="control has-icons-left">
                    <input id="username-input" type="text" placeholder="username" class="input"
                        style="height: 50px;" value="" value="">
                    <span class="icon is-small is-left">
                        <i class="fa fa-envelope"></i>
                    </span>
                </div>
            </div>

            <div class="field login-field-pswd" style="margin-top: 25px;">
                <div class="control has-icons-left">
                    <input id="password-input" type="password" placeholder="********" class="input"
                        style="height: 50px;" value="">
                    <span class="icon is-small is-left">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
            </div>

            <div class="field login-field-invite" style="margin-top: 25px;">
                <label for="" class="label form-group-label">Invite</label>
                <div class="control has-icons-left">
                    <input id="invite-input" type="text" class="input"
                        style="height: 50px;" value="" value="">
                    <span class="icon is-small is-left">
                        <i class="fa fa-envelope"></i>
                    </span>
                </div>
            </div>

            <div class="field login-field-pswd validationError" hidden="true" style=" margin-top: 25px;">
                <div id = "validation-error" class="notification is-danger">
                    Username already taken
                </div>
            </div>

            <div class="field">
                <button id="submit" style="margin-top: 25px;" class="button is-info login-button-login">SIGN
                    UP</button>
            </div>

        </div>
    </div>
</div>
{{/inline}}

{{> base}}