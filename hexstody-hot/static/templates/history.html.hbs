{{#each history_items}}
<div class="row card">
   <div class="col-3"></div>
   <div class="col-3">
      {{#if (isDeposit this)}}+{{else}}-{{/if}} &nbsp; {{formatCurrencyValue}}
   </div>
   <div class="col-1">
      {{this.currency}}
   </div>
   <div class="col-1">
      21.21.21
   </div>
   {{#if (isWithdrawal this)}}
   <div class="col-1">
      Completed
   </div>
   {{/if}}
   {{#if (isDeposit this)}}
   <div class="col-1">
      6 of 6
   </div>
   {{/if}}
</div>
{{/each}}