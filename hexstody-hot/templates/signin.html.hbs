<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/chota.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <script src="/scripts/handlebars.min-v4.7.7.js"></script>
    <script src="/scripts/qrcode.min.js"></script>
</head>

<body>
    <div class="container">
        <script type="module" src="/scripts/page/common.js"></script>
        <script type="module" src="/scripts/page/signin.js"></script>

        <div class="row  is-center text-center is-full-screen">
            <div class="col-4 card">
                <p>
                <h1>Sign In </h1>
                </p>
                <p>
                    <input id="signInEmail" type="email" placeholder="name@email.com">
                </p>
                <p>
                    <input id="signInPassword" type="password" placeholder="Type your Password">
                </p>
                <p>
                    <label id="validationError" hidden="hidden" class="text-error"></label>
                </p>
                <p>
                    <a href="/signup">or sign up</a>
                </p>
                <p>
                    <button id="submit" class="button primary">Submit</button>
                </p>
            </div>
        </div>
    </div>
</body>

</html>