{{#each history_items}}
<div class="row card">
   <div class="col-2">

   </div>
   <div class="col-3">
      {{#if (isDeposit this)}}
      <span class="text-success"> + &nbsp; {{formatCurrencyValue}}</span>
      {{else}}
      <span class="text-error">   - &nbsp; {{formatCurrencyValue}}</span>
      {{/if}}
   </div>
   <div class="col-1">
      {{currency}}
   </div>
   <div class="col-2">
      {{formattedElapsedTime}}
   </div>
   {{#if (isWithdrawal this)}}
   <div class="col">
      Status: {{status}}
   </div>
   {{/if}}
   {{#if (isDeposit this)}}
   <div class="col">
      Confirmations: {{number_of_confirmations}} of {{../target_number_of_confirmations}}
   </div>
   {{/if}}
</div>
{{/each}}