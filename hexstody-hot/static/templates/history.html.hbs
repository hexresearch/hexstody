{{#each history_items}}
<div class="row card">
   <div class="col-3"></div>
   <div class="col-3">
      {{#if (isDeposit this)}}+{{else}}-{{/if}} &nbsp; {{formatCurrencyValue}}
   </div>
   <div class="col-1">
      {{currency}}
   </div>
   <div class="col-3">
      {{formattedElapsedTime}}
   </div>
   {{#if (isWithdrawal this)}}
   <div class="col-1">
      Completed
   </div>
   {{/if}}
   {{#if (isDeposit this)}}
   <div class="col-1">
      {{number_of_confirmations}} of {{../target_number_of_confirmations}}
   </div>
   {{/if}}
</div>
{{/each}}