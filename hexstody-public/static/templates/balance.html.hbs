{{#each balances}}
<div class="balances-item">
    <div class="balances-item-label">
        {{currencyFullName (formatCurrencyName)}}
    </div>
    <div class="columns is-gapless is-vcentered">
        <div class="column">
            <div class="balances-item-value">
                <span id="curr-val-{{formatCurrencyName}}" class="balance-value">
                    {{formatCurrencyValue}}
                </span><span id="usd-{{formatCurrencyName}}" class="balance-value-fiat"></span>
            </div>
        </div>
        <div class="column is-narrow">
            <a class="button is-primary deposit-button" href="/deposit?tab={{toLowerCase (formatCurrencyName)}}">
                {{../lang.deposit}}
            </a>
            <a class="button withdraw-button" href="/withdraw?tab={{toLowerCase (formatCurrencyName)}}">
                {{../lang.withdraw}}
            </a>
        </div>
    </div>
</div>
{{/each}}